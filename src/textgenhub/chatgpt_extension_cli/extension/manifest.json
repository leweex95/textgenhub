{
    "manifest_version": 3,
    "name": "ChatGPT Automation Extension",
    "version": "0.2.0",
    "description": "Automates ChatGPT interactions via CLI communication.",
    "permissions": ["scripting", "tabs", "activeTab", "storage"],
    "host_permissions": ["https://*.openai.com/*", "https://*.chatgpt.com/*", "https://chatgpt.com/*", "https://chat.openai.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "action": {
        "default_title": "ChatGPT Automation"
    }
}
